---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Aplikacja do nauki z fiszkami" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-white text-slate-900 dark:bg-slate-950 dark:text-white antialiased">
    <slot />
    <div id="sonner-toaster"></div>
  </body>
</html>

<script>
  import { Toaster } from "sonner";
  import { createRoot } from "react-dom/client";

  // Inicjalizacja komponentu powiadomie≈Ñ
  const container = document.getElementById("sonner-toaster");
  if (container) {
    const root = createRoot(container);
    root.render(Toaster({ richColors: true, position: "top-right" }));
  }
</script>

<style is:global>
  :root {
    --background: 0 0% 100%;
    --foreground: 222.2 84% 4.9%;
  }

  .dark {
    --background: 222.2 84% 4.9%;
    --foreground: 0 0% 100%;
  }
</style> 