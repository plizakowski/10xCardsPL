---
import BaseLayout from '../layouts/BaseLayout.astro';
import ForgotPasswordForm from '../components/auth/ForgotPasswordForm';
---

<BaseLayout title="Odzyskiwanie hasła">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto">
      <h1 class="text-3xl font-bold mb-8 text-center">Odzyskiwanie hasła</h1>
      <ForgotPasswordForm client:load />
      <div class="mt-4 text-center">
        <a href="/login" class="text-primary hover:underline">Powrót do logowania</a>
      </div>
    </div>
  </div>
</BaseLayout> 